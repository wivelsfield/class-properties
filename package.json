{
  "name": "class-properties",
  "version": "1.0.0",
  "description": "Decorate class properties in TypeScript so they can be known at runtime",
  "author": "Simon Jones",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simon-a-j/class-properties.git"
  },
  "bugs": {
    "url": "https://github.com/simon-a-j/class-properties/issues"
  },
  "homepage": "https://github.com/simon-a-j/class-properties#readme",
  "tags": [
    "typescript",
    "property-decorator",
    "validate-properties"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prettier": "prettier --write \"**/*.{ts,md}\"",
    "lint": "eslint \"**/*.ts\" --fix",
    "test": "jest",
    "coverage": "jest --coverage",
    "prepack": "rm -rf dist && tsc --project tsconfig.build.json"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.17",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "dtslint": "^4.0.6",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage"
  }
}
